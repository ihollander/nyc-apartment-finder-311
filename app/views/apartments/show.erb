<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>

    <h1><%= "#{@bedrooms} #{@apartment.pluralize_bedroom(@bedrooms)} Apartment in #{@apartment.neighborhood.name}" %></h1>
    <div class="ui large images">

      <img class="ui rounded image" src="<%= @images[0] %>" alt="picture of property">
    </div>
    <%= "#{@street}," %>
    <br>
    <%= "#{@city}," %>
    <br>
    <%= "#{@state}," %>
    <br>
    <%= "#{@zipcode}" %>
    <br>
    <br>
    <%= "#{@bedrooms} #{@apartment.pluralize_bedroom(@bedrooms)} : #{@bathrooms} #{@apartment.pluralize_bathroom(@bathrooms)} : #{@sqft} sqft" %>

    <% if @year_built %>
    <br>
    <br>
      Year Built: <%= @year_built %>
    <% end %>

    <br>
    <br>
      Value: <%= "#{@apartment.parse_value(@value)}" %>


    <br>
    <br>

    <% if @description %>
      Description:
      <ol><%= @description %></ol>
    <% end  %>

    <br>
    <br>



    <br>
    <br>
    <%= link_to "Back To All Apartments", apartments_path %>
    <br>
    <br>
    <%= link_to "View Next", apartment_path(@apartment.id + 1) %>
    <br>
    <br>
    <%= link_to "View Previous", apartment_path(@apartment.id - 1) %>
    <br>
    <br>
    <%= link_to "View Full Page On Zillow", @apartment.url %>
    <br>
    <br>
    <!-- test -->
    <div class="ui three stackable cards">
      <% @images.each do |url| %>
      <div class="card" style="object-fit: cover">
        <div class="image">
          <img src="<%= url %>">
        </div>
      </div>
      <% end %>
    </div>

  </body>
</html>
